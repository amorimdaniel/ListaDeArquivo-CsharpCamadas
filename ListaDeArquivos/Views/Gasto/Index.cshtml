@model IEnumerable<Model.Gasto>

@{
    ViewData["Title"] = "Index";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert btn-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["Mensagem"]
    </div>
}

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary" asp-area="" asp-controller="AddGasto" asp-action="Index">Adicionar gasto</a>
</div>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th>
                Data
            </th>
            <th>
                Preço
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gasto in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => gasto.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => gasto.Data)
                </td>
                <td>
                  R$@Html.DisplayFor(modelItem => gasto.Preco)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-route-id="@gasto.IdGasto" asp-controller="Gasto" asp-action="Apagar" target="_blank">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="btn btn-primary">
   Total R$ @{
        decimal total = 0;
        @foreach (var gasto in Model)
        {
            total = total + gasto.Preco;
        }
        @total.ToString("F2")
    }
</div>