@model Model.Usuario
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Usuario";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-danger text-center" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["Mensagem"]
    </div>
}

<form asp-controller="AddUsuario" asp-action="CadastrarUsuario" method="post">
    <div class="mb-3">
        <label for="login" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a role="button" class="btn btn-secondary btn-block" asp-controller="Login" asp-action="Index">Voltar</a>
</form>
